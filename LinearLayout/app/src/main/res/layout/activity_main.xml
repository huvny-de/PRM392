<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="12"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_weight="3"
        android:background="#FF9800"
        android:textColor="#7F7CA3"
        android:textSize="30sp"
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Text View Component 1" />

    <TextView
        android:layout_weight="4"
        android:background="#1AFF00"
        android:textColor="#7F7CA3"
        android:textSize="30sp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Text View Component 2" />

    <TextView
        android:layout_weight="3"
        android:background="#4CAF50"
        android:textColor="#7F7CA3"
        android:textSize="30sp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Text View Component 3" />

    <TextView
        android:layout_weight="2"
        android:background="#FFEB3B"
        android:textColor="#7F7CA3"
        android:textSize="30sp"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Text View Component 4" />

</LinearLayout>